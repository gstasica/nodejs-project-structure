{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "removeComments": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "traceResolution": true,
        "lib": [
            "es6",
            "es2015.promise",
            "dom"
        ],
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "*": [
                "*",
                "src/*"
            ]
        }
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ]
}